Crear el appscript

function enviarCorreo(correoDestinatario, asunto, cuerpoCorreo) {
  // Enviar el correo electrónico
  MailApp.sendEmail({
    to: correoDestinatario,
    subject: asunto,
    htmlBody: cuerpoCorreo
  });

  // Mostrar cuota diaria 
  Logger.log(MailApp.getRemainingDailyQuota())
}


